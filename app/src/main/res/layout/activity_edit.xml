<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="10dp"
    tools:context=".EditActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:textAlignment="center">

            <ImageView
                android:id="@+id/IdImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                app:srcCompat="@drawable/ic_launcher_foreground" />

            <TextView
                android:id="@+id/TextName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="25dp"
                android:textSize="20sp"
                android:text="Name"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/editname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:hint="Nuevo Nombre"
                android:inputType="textCapSentences"
                android:lines="1"/>

            <EditText
                android:id="@+id/editage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:maxLength="3"
                android:hint="Nueva Edad"
                android:inputType="number"
                android:lines="1"/>

            <EditText
                android:id="@+id/editcell"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:hint="Nuevo N. Celular"
                android:maxLength="10"
                android:inputType="number"
                android:lines="1"/>

            <Button
                android:id="@+id/id_btnCambio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="btnCambiar"
                android:text="Cambiar"
                android:layout_marginBottom="30dp"/>

            <Button
                android:id="@+id/id_btnSubir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="btnSubir"
                android:text="Subir foto" />

            <Button
                android:id="@+id/id_btnDescargas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="btnDescargar"
                android:text="Descargar Foto" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>